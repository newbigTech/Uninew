<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingLeft="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:text="@string/more_system_host_switch"
            android:textColor="#f1f1f1"
            android:textSize="16sp"/>

        <Switch
            android:id="@+id/more_host_switch"
            style="@style/voice_switch"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="41dp"
            android:checked="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/more_host_switch"
            android:layout_marginTop="8dp"
            android:background="@mipmap/viewline"></View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:text="@string/more_system_host_name"
            android:textColor="#f1f1f1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/more_host_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:drawablePadding="14dp"
            android:drawableRight="@drawable/host_right_selector"
            android:text="Uninew2"
            android:textColor="#686868"
            android:textSize="16sp"/>
        <!--<ImageView
            android:id="@+id/i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/host_right_selector"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/more_host_name"
            android:layout_marginTop="8dp"
            android:background="@mipmap/viewline"></View>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:text="@string/more_system_host_pws"
            android:textColor="#f1f1f1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/more_host_pws"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:drawablePadding="14dp"
            android:drawableRight="@drawable/host_right_selector"
            android:text="Uninew123456"
            android:textColor="#686868"
            android:textSize="16sp"/>
        <!--<ImageView
            android:id="@+id/i"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:layout_centerVertical="true"
            android:src="@drawable/host_right_selector"/>-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/more_host_pws"
            android:layout_marginTop="8dp"
            android:background="@mipmap/viewline"></View>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:text="@string/more_system_host_number"
            android:textColor="#f1f1f1"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/more_host_number"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="0"
            android:textColor="#686868"
            android:textSize="16sp"/>
    </RelativeLayout>


</LinearLayout>