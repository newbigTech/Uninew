<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="22dp"
    android:paddingTop="13dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp">

        <TextView
            style="@style/SecondaryTile"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/mangae_parameter_text1"
    />

        <TextView
            style="@style/SecondaryTile"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mangae_dial_baud_rate"
             />

        <TextView
            style="@style/SecondaryTile"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:text="@string/mangae_dial_peripheral"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/viewline"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp">

        <TextView
            style="@style/SecondaryTile"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="232-1"
           />

        <Spinner
            android:id="@+id/spinner_232_1_rate"
            style="@style/setting_spinner"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:entries="@array/alarm_spinner"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/spinner_232_1_rate"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/spinner_img_dwon" />

        <Spinner
            android:id="@+id/spinner_232_1_out"
            style="@style/setting_spinner"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:entries="@array/alarm_spinner"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/spinner_img_dwon" />
        />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/viewline"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp">

        <TextView
            style="@style/SecondaryTile"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="232-2"
          />

        <Spinner
            android:id="@+id/spinner_232_2_rate"
            style="@style/setting_spinner"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:entries="@array/alarm_spinner"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/spinner_232_2_rate"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/spinner_img_dwon" />

        <Spinner
            android:id="@+id/spinner_232_2_out"
            style="@style/setting_spinner"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:entries="@array/alarm_spinner"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/spinner_img_dwon" />
        />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/viewline"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp">

        <TextView
            style="@style/SecondaryTile"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="232-3"
             />

        <Spinner
            android:id="@+id/spinner_232_3_rate"
            style="@style/setting_spinner"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:entries="@array/alarm_spinner"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/spinner_232_3_rate"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/spinner_img_dwon" />

        <Spinner
            android:id="@+id/spinner_232_3_out"
            style="@style/setting_spinner"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:entries="@array/alarm_spinner"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/spinner_img_dwon" />
        />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/viewline"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp">

        <TextView
            style="@style/SecondaryTile"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="485-1"
        />

        <Spinner
            android:id="@+id/spinner_485_1_rate"
            style="@style/setting_spinner"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:entries="@array/alarm_spinner"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@+id/spinner_485_1_rate"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/spinner_img_dwon" />

        <Spinner
            android:id="@+id/spinner_485_1_out"
            style="@style/setting_spinner"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:entries="@array/alarm_spinner"></Spinner>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:src="@mipmap/spinner_img_dwon" />
        />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@mipmap/viewline"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingLeft="85dp">

        <Button
            android:id="@+id/serial_btn_defult"
            style="@style/SecondaryTile"
            android:layout_centerVertical="true"
            android:background="@drawable/base_btn_selector"
            android:text="@string/mangae_btn_defult"
            android:visibility="gone" />

        <Button
            android:id="@+id/serial_btn_save"
            style="@style/SecondaryTile"
            android:layout_centerVertical="true"
            android:layout_marginLeft="70dp"
            android:layout_toRightOf="@+id/serial_btn_defult"
            android:background="@drawable/base_btn_selector"
            android:text="@string/mangae_btn_save"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>