<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:src="@mipmap/dividing_line" />

        <LinearLayout
            android:id="@+id/ll_main_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="31dp"
            android:layout_marginStart="31dp"
            android:layout_marginTop="26dp"
            android:orientation="vertical"
            android:weightSum="3">

            <Button
                android:id="@+id/bt_heavycar"
                style="@style/ButtonStyle"
                android:text="@string/main_heavy_car" />

            <Button
                android:id="@+id/bt_emptycar"
                style="@style/ButtonStyle"
                android:text="@string/main_empty_car" />

            <Button
                android:id="@+id/bt_pause"
                style="@style/ButtonStyle"
                android:text="@string/main_pause" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/rl_main_catmessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="27dp"
            android:layout_marginLeft="27dp"
            android:layout_marginRight="27dp"
            android:layout_marginStart="27dp"
            android:layout_toEndOf="@+id/ll_main_bt"
            android:layout_toRightOf="@+id/ll_main_bt"
            android:orientation="vertical"
            android:paddingBottom="5dp">

            <LinearLayout
                android:id="@+id/tv_main_currentfare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="23dp"
                android:layout_marginLeft="13dp"
                android:layout_marginStart="13dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_currentfare_ten"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@mipmap/zero" />

                <ImageView
                    android:id="@+id/iv_currentfare_bit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zero" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:src="@mipmap/point" />

                <ImageView
                    android:id="@+id/iv_currentfare_point1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zero" />

                <ImageView
                    android:id="@+id/iv_currentfare_point2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/zero" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginEnd="12dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="12dp"
                    android:layout_marginStart="5dp"
                    android:text="@string/yuan"
                    android:textColor="@color/text_p_color" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@mipmap/dividing_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp">

                <TextView
                    android:id="@+id/tv_mian_title_price"
                    style="@style/SecondaryTile"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_title_price" />

                <TextView
                    android:id="@+id/tv_main_content_price"
                    style="@style/SecondaryTile"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_default_money" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@mipmap/dividing_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp">

                <TextView
                    android:id="@+id/tv_mian_title_mileage"
                    style="@style/SecondaryTile"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:text="@string/main_title_mileage" />

                <TextView
                    android:id="@+id/tv_mian_content_mileage"
                    style="@style/SecondaryTile"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_default_mileage" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@mipmap/dividing_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp">

                <TextView
                    android:id="@+id/tv_mian_title_timing"
                    style="@style/SecondaryTile"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_title_timer"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/tv_mian_content_timing"
                    style="@style/SecondaryTile"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_default_time" />

            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:src="@mipmap/dividing_line" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginStart="13dp"
                android:layout_marginTop="20dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:src="@mipmap/null_car" />


                <TextView
                    android:id="@+id/tv_main_carstate"
                    style="@style/FirstTitle"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="@string/main_empty_car"
                    android:textColor="@color/text_s_color" />
            </RelativeLayout>


        </LinearLayout>


        <ImageView
            android:id="@+id/vertical_dividing_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_toRightOf="@+id/rl_main_catmessage"
            android:src="@mipmap/vertical_dividing_line" />

        <RelativeLayout
            android:id="@+id/rl_main_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@+id/vertical_dividing_line"
            android:layout_toRightOf="@+id/vertical_dividing_line"
            android:background="@mipmap/driver_message_background">

            <ImageView
                android:id="@+id/iv_main_headportrait"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:background="@mipmap/avatar_background"
                android:onClick="onCutoverActivity"
                android:src="@mipmap/driver_image" />

            <TextView
                android:id="@+id/tv_main_drivername"
                style="@style/SecondaryTile"
                android:layout_below="@+id/iv_main_headportrait"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                android:text="@string/main_default_drivername"
                 />

            <LinearLayout
                android:id="@+id/ll_main_controlphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_main_drivername"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_title_controlphone"
                    style="@style/ThirdTitle"
                    android:maxLines="1"
                    android:text="@string/main_title_controlphone"
                    />

                <TextView
                    android:id="@+id/tv_main_content_controlphone"
                    style="@style/ThirdTitle"
                    android:maxLines="1"
                    android:text="@string/main_default_controlphone"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_main_certificate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_main_controlphone"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_main_title_certificate"
                    style="@style/ThirdTitle"
                    android:maxLines="1"
                    android:text="@string/main_title_certificate"
                 />

                <TextView
                    android:id="@+id/tv_main_content_certificate"
                    style="@style/ThirdTitle"
                    android:maxLines="1"
                    android:text="@string/main_default_certificate"
                  />

            </LinearLayout>


            <RatingBar
                android:id="@+id/rb_main_evaluation"
                style="@style/RadingStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_main_certificate"
                android:layout_marginLeft="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="3"
                android:stepSize="1" />

        </RelativeLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:id="@+id/ll_mian_orders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onCutoverActivity"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_seletor_order" />

            <TextView
                style="@style/ButtonTitleStyle"
                android:text="@string/main_order_text" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mian_msg"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onCutoverActivity"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_seletor_msg" />

            <TextView
                style="@style/ButtonTitleStyle"
                android:text="@string/main_msg_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mian_navigation"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onCutoverActivity"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_seletor_navigation" />

            <TextView
                style="@style/ButtonTitleStyle"
                android:text="@string/main_navigation_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mian_call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onCutoverActivity"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_seletor_call" />

            <TextView
                style="@style/ButtonTitleStyle"
                android:text="@string/main_call_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mian_revenue"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onCutoverActivity"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_seletor_revenue" />

            <TextView
                style="@style/ButtonTitleStyle"
                android:text="@string/main_revenue_text" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_mian_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onCutoverActivity"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_seletor_more" />

            <TextView
                style="@style/ButtonTitleStyle"
                android:text="@string/main_more_text" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
