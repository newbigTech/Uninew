<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/main_background"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="21dp"
        android:layout_marginTop="5dp"
        android:background="@mipmap/current_revenue_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_revenue_title"
            style="@style/SecondaryTile"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="@string/revenue_current" />

        <LinearLayout
            android:id="@+id/tv_main_currentfare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="51dp"
            android:layout_marginLeft="51dp"
            android:layout_marginRight="51dp"
            android:visibility="gone"
            android:layout_marginStart="51dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_currentfare_ten"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/zero"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/iv_currentfare_bit"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/zero" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="bottom"
                android:src="@mipmap/point" />

            <ImageView
                android:id="@+id/iv_currentfare_point1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/zero" />

            <ImageView
                android:id="@+id/iv_currentfare_point2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@mipmap/zero" />

            <TextView
                style="@style/ThirdTitle"
                android:layout_gravity="bottom"
                android:text="@string/yuan" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="5dp"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp">

            <TextView
                style="@style/ThirdTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/revenue_driving_mileage" />

            <TextView
                android:id="@+id/tv_revenue_drivingMileage"
                style="@style/ThirdTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0.0 km" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp">

            <TextView
                style="@style/ThirdTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/revenue_bare_mileage" />

            <TextView
                android:id="@+id/tv_revenue_bareMileage"
                style="@style/ThirdTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0.00 km" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp">

            <TextView
                style="@style/ThirdTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/revenue_wait_time" />

            <TextView
                android:id="@+id/tv_revenue_waitTime"
                style="@style/ThirdTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="50min" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp">

            <TextView
                style="@style/ThirdTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/revenue_bare_rate" />

            <TextView
                android:id="@+id/tv_revenue_bareRate"
                style="@style/ThirdTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0%" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp">

            <TextView
                style="@style/ThirdTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/revenue_times" />

            <TextView
                android:id="@+id/tv_revenue_times"
                style="@style/ThirdTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp">

            <TextView
                style="@style/ThirdTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/revenue_amount" />

            <TextView
                android:id="@+id/tv_revenue_amount"
                style="@style/ThirdTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0.00" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="32dp"
            android:paddingLeft="32dp"
            android:paddingRight="32dp"
            android:paddingStart="32dp">

            <TextView
                style="@style/ThirdTitle"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="@string/revenue_card_amount" />

            <TextView
                android:id="@+id/tv_revenue_cardAmount"
                style="@style/ThirdTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="0.00" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_revenue_history"
            style="@style/ButtonTitleStyle"
            android:layout_height="44dp"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/btn_seletor"
            android:text="@string/revenue_history_button" />

    </LinearLayout>


    <ListView
        android:id="@+id/lv_show_revenue"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="23dp"
        android:layout_marginLeft="11dp"
        android:layout_marginRight="23dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="29dp"
        android:divider="#00000000"
        android:dividerHeight="0dip"
        android:scrollbars="none" />

</LinearLayout>
