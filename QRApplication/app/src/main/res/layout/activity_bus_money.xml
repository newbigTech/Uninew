<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_back"
    tools:context="com.example.qr_codescan.BusMoneyhomeActivity" >

    <include
        android:id="@+id/mytitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/activity_mytitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mytitle"
        android:gravity="center"
        android:padding="4dp"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <include
            android:id="@+id/lin_home_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:visibility="gone"
            layout="@layout/lin_home_setting" />

        <LinearLayout
            android:id="@+id/lin_home"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/lin_shap"
            android:visibility="visible"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="余       额："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/activity_textsize" />

                <TextView
                    android:id="@+id/bus_money"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.3"
                    android:gravity="center|left"
                    android:text="50.00"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/activity_textsize" />
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="单次扣款："
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/activity_textsize" />

                <TextView
                    android:id="@+id/bus_singmoney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1.3"
                    android:gravity="center|left"
                    android:text="2.00"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/activity_textsize" />
                <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.8" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/bus_setting"
                android:layout_width="190dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_text"
                android:gravity="center"
                android:text="@string/bus_setting_set"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_btnsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>