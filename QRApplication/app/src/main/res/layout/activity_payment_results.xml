<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/home_back"
    tools:context="com.example.qr_codescan.BusMoneyhomeActivity" >

    <include
        android:id="@+id/mytitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        layout="@layout/activity_mytitle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mytitle"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.3"
            android:gravity="center"
            android:orientation="horizontal" >
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="线       路："
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_result_textsize" />

            <TextView
                android:id="@+id/pay_results_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="704"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_result_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="班       次："
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_result_textsize" />

            <TextView
                android:id="@+id/pay_results_shift"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_result_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center|right"
                android:text="扣       款："
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_result_textsize" />

            <TextView
                android:id="@+id/pay_results_debit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center|left"
                android:text="2.00"
                android:textColor="@android:color/black"
                android:textSize="@dimen/activity_result_textsize" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center|top"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/ok_img" />

            <TextView
                android:id="@+id/pay_results_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|top"
                android:text="缴费不成功"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/activity_result_result"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/pay_results_faile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center|top"
                android:text="余额不足"
                android:textColor="#3300ff"
                android:textSize="@dimen/activity_result_textsize"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>