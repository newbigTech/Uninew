<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:gravity="center|top"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.8"
            android:adjustViewBounds="true"
            android:background="@color/title_bg"
            android:scaleType="centerInside"
            android:src="@mipmap/icon"
            android:visibility="visible" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-20dp"
            android:layout_weight="2.2"
            android:background="@color/title_bg"
            android:gravity="center|top"
            android:text="智能公交客户端"
            android:textColor="#ffffff"
            android:textSize="25sp" />

         <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.3"
            android:gravity="left|center"
            android:paddingLeft="100dp"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/left_title_txt_conncet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.2"
            android:drawableLeft="@mipmap/collect"
            android:gravity="left|center"
            android:paddingLeft="60dp"
            android:background="@drawable/btn_selector"
            android:text="    采    集"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/left_title_txt_line"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="2.2"
            android:drawableLeft="@mipmap/line"
            android:gravity="left|center"
            android:background="@drawable/btn_selector"
            android:paddingLeft="60dp"
            android:text="    线    路"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:id="@+id/left_title_txt_ftp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="2.2"
            android:drawableLeft="@mipmap/more"
            android:gravity="left|center"
            android:background="@drawable/btn_selector"
            android:paddingLeft="60dp"
            android:text="    更    多"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@android:color/darker_gray" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="left|center"
            android:paddingLeft="100dp"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>